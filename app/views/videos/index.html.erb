                  <a href="#">
                    <i class="fa fa-play-circle i-2x"></i>
                  </a>
                </div>
              </div>
              <a href="#l">
                <%= image_tag video.cover_image.url(:medium),class:'r r-2x img-full'%>
              </a>
            </div>
            <div class="padder-v">
              <a href="#" class="text-ellipsis"><%= video.title %></a>
              <a href="#" class="text-ellipsis text-xs text-muted"><%=video.user.name%></a>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </section>
  </section>
  <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open" data-target="#nav,html"></a>
</section>
