<section id="content">
  <section class="vbox" id="bjax-el">
    <section class="scrollable padder-lg">
      <h2 class="font-thin m-b">Video</h2>
      <div class="row row-sm">
        <% @videos.each do |video| %>
        <div class="col-xs-12 col-sm-4">
          <div class="item">
            <div class="pos-rlt">
              <div class="item-overlay opacity r r-2x bg-black">
                <div class="center text-center m-t-n">
                  <a href="#">
                    <i class="fa fa-play-circle i-2x"></i>
                  </a>
                </div>
              </div>
              <div class="top">
                <span class="badge bg-dark m-l-sm m-t-sm">03:20</span>
              </div>
              <a href="#">
                <%= image_tag video.cover_image.url(:medium),class:'r r-2x img-full'%>
              </a>
            </div>
            <div class="padder-v">
              <a href="#" class="text-ellipsis"><%= video.title %></a>
              <a href="#" class="text-ellipsis text-xs text-muted"><%=video.user.name%></a>
            </div>
          </div>
        </div>
        <%end%>
      </div>
      <h3 class="font-thin m-b">Video List</h3>
      <div class="row row-sm">
        <% @videos.each do |video| %>
      <div class="col-xs-6 col-sm-4 col-md-3">
