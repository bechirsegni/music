<%= form_for @video, :html => {  :multipart => true ,:class => 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :title, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :title, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :description, :class => 'text_area form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :video_link, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :video_link, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :cover_image, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :cover_image %>
      </div>
    </div>
       <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    videos_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>
