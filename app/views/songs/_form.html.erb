<%= form_for @song, :multipart => true ,:class => 'form-horizontal'  do |f| %>
    <div class="form-group">
      <%= f.label :title, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :title, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :description, :class => 'text_area form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mp3, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :mp3 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :image%>
      </div>
    </div>
    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    songs_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>
