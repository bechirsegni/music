<h4 class="m-t-lg m-b">Leave a comment</h4>
<%= form_for([@video, @video.comments.build]) do |f| %>

    <div class="form-group">
      <%= f.label :Comment %>
      <%= f.text_area :body,class:'form-control',placeholder:'Type your Comment',rows:'5' %>
    </div>
    <div class="actions">
      <%= f.submit 'Submit comment' , class:'btn btn-success'%>
    </div>
<% end %>
</div>