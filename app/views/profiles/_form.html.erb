<%= form_for (@profile), :html => {  :multipart => true ,:class => 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :location, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :location, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :about, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :about, :class => 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :description, :class => 'text_area form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :facebook, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :facebook %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :twitter, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :twitter %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :google, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :google %>
      </div>
    </div>
    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    profiles_path, :class => 'btn btn-default' %>
      </div>
    </div>
<% end %>